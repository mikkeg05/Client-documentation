@model IEnumerable<Integration>
@{ <div class="col-lg-6">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Integrations</h6>

        </div>
        <div class="card-body">
            @{ 
                
                foreach (var item in Model)
                {
                    List<string> strings = item.SystemName.Split(' ').ToList();
                    var indexString = item.SystemName;
                    if (strings.Any())
                    {
                        indexString = "";
                        indexString = String.Join("", strings);
                    }
                    <a href="#@indexString" class="d-block card-header py-3" data-toggle="collapse"
                       role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">@item.SystemName  Plugins</h6>
                    </a>
                    <div class="collapse" id="@indexString">
                        <div class="card-body">

                            <ul>
                                <li>System Name: @item.SystemName</li>
                                <li>Description: @item.Description</li>
                                <li>
                                    <strong>websites:</strong> @foreach (var website in item.Websites)
                                    {
                                        <p>@website.Name: <a href="@website.Url">@website.Url</a></p>
                                    }
                                </li>
                            </ul>
                        </div>
                    </div>
                    }
                }
        </div>
    </div>

</div>

}