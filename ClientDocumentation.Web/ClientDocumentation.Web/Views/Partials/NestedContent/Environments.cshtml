@model IEnumerable<ClientDocumentation.Web.Models.ModelsBuilder.Environment>
<div class="col-lg-6">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Integrations</h6>

        </div>
        <div class="card-body">
            @{

                foreach (var item in Model)
                {
                    List<string> strings = item.EnvironmentValue.Split(' ').ToList();
                    var indexString = item.EnvironmentValue;
                    if (strings.Any())
                    {
                        indexString = "";
                        indexString = String.Join("", strings);
                    }
                    <a href="#@indexString" class="d-block card-header py-3" data-toggle="collapse"
                       role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">@item.EnvironmentValue</h6>
                    </a>
                    <div class="collapse" id="@indexString">
                        <div class="card-body">


                            <p>Server type: @item.ServerType</p>
                            @foreach (var str in item.NiceToKnow)
                            {
                                <p>@str</p>
                            }
                            @foreach (var str in item.Requirements)
                            {
                                <p>@str</p>
                            }
                            <p>@item.Description</p>

                        </div>
                    </div>
                }
            }
        </div>
    </div>

</div>